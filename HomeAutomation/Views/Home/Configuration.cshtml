@model HomeAutomation.Models.Home.EditConfigurationRequestModel

@{
    ViewData["Title"] = "Configuration";
}

<h1>Configuration</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Configuration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Configuration" class="control-label sr-only"></label>
                <span asp-validation-for="Configuration" class="text-danger"></span>
                <textarea asp-for="Configuration" class="form-control" rows="40"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

